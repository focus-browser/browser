# Browser branding
ac_add_options --with-ccache=sccache
ac_add_options --without-wasm-sandboxed-libraries

ac_add_options --with-app-basename="Loon Browser"
ac_add_options --with-app-name=${binName}
export MOZ_USER_DIR="Loon browser"
export MOZ_APP_VENDOR="Loon browser"
export MOZ_APP_BASENAME=LoonBrowser
export MOZ_APP_PROFILE=${binName}
export MOZ_APP_DISPLAYNAME="Loon browser"
export MOZ_MACBUNDLE_ID=com.ablaze.loon.browser.alpha
export MOZ_DISTRIBUTION_ID=com.ablaze.loon.browser.alpha
export MOZ_MACBUNDLE_NAME="Loon browser.app"
export MOZ_APP_REMOTINGNAME=com.ablaze.loon.browser.alpha

# Misc
export MOZ_INCLUDE_SOURCE_INFO=1
export MOZ_REQUIRE_SIGNING=
export MOZ_SOURCE_REPO=https://github.com/pulse-browser/browser
export MOZ_SOURCE_CHANGESET=${changeset}

# Enable these to enable mozilla telemetry and tracking. By default, mozilla will not build telemetry code.
# MOZ_TELEMETRY_REPORTING=1
# MOZ_DATA_REPORTING=1
